function bootarg.contains() {
	if [[ ! -z "$(echo "$BOOTARGS" | grep "$1")" ]]; then
		echo 1
	else
		echo 0
	fi
}

function verbose() {
	if [[ $(bootarg.contains "verbose") == 1 ]]; then
		echo "$1"
	fi
}

function leaveSystem() {
	rm -rf "$CACHE" 2>/dev/null
	verbose "[*] Goodbye!"
	exit 0
}

export -f bootarg.contains
export -f verbose
export -f leaveSystem