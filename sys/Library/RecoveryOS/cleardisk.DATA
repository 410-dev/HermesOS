#!/bin/bash
function cleardisk() {
	while [[ true ]]; do
		if [[ -z "$ROOTFS" ]]; then
			colorprint "${RED}Error: Disk not selected."
			break
		fi
		colorprint "${RED}Do you want to clear disk? (YES / no)"
		read yn
		if [[ "$yn" == "YES" ]]; then
			export diskname="$ROOTFS"
			rm -rf "$diskname"
			mkdir -p "$diskname"
		else
			echo "Aborted."
		fi
		break
	done
}

export -f cleardisk